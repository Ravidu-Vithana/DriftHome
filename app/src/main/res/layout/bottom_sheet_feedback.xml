<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/d_feedbackBottomSheet_text1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:max="5"
        android:numStars="5"
        android:progressTint="@color/d_yellow"
        android:rating="1"
        android:stepSize="1"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/feedbackInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:gravity="top"
        android:hint="@string/d_feedbackBottomSheet_text2"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="3"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/d_blue"
        android:layout_marginTop="16dp"
        android:text="@string/d_feedbackBottomSheet_btn1"
        app:cornerRadius="@dimen/d_button_corner_radius" />
</LinearLayout>
